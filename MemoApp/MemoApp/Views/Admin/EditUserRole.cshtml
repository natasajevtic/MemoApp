@model List<EditUserRolesViewModel>
@{
    Layout = null;
}
<form method="post" asp-controller="Admin" asp-action="EditUserRole" onsubmit="return submitForm(this)">
    <h6>Select user role:</h6>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">        
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-check">
                <input type="hidden" asp-for="@Model[i].RoleId" />
                <input type="hidden" asp-for="@Model[i].RoleName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input checkRole" />
                <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>
            </div>
        }
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Save</button>
        <button data-dismiss="modal" class="btn btn-danger">Cancel</button>
    </div>
</form>

<partial name="../Shared/_ValidationScriptsPartial" />

<script>
    $('.checkRole').change(function () {
        $(".checkRole").not(this).prop('checked', false);
    });
</script>
