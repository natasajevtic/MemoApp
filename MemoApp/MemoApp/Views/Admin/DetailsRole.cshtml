@inject IViewLocalizer localizer
@model RoleViewModel
@{
    Layout = null;
}
<form>
    <fieldset disabled>
        <div class="form-group">
            <label asp-for="Id">@localizer["Role id"]</label>
            <input asp-for="Id" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Name">@localizer["Role name"]</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Users">@localizer["Users in this role"]</label>
            <div class="form-group">
                @foreach (var user in Model.Users)
                {
                    @user<br />
                }
            </div>
        </div>
    </fieldset>
    <button data-dismiss="modal" class="btn btn-primary"><i class="fa fa-list"></i> @localizer["Back to roles"]</button>
</form>
