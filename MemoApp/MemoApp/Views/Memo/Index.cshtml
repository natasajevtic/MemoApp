@model List<MemoViewModel>
@{
    ViewData["Title"] = "Memos";
}

<div class="modal" role="dialog" id="modalAdd">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body"></div>
        </div>
    </div>
</div>

<a class="btn btn-success btn-lg" onclick="showPopupForm('@Url.Action("Create","Memo")', 'Add memo')">
    <i class="fa fa-plus"></i> Add new
</a>

<table class="table table-light table-bordered table-hover table-striped" id="memoTable">
    <thead>
        <tr>
            <th class="row-id">Id</th>
            <th>User</th>
            <th>Title</th>
            <th>Note</th>
            <th>Tags</th>
            <th>Created at</th>
            <th></th>
        </tr>
    </thead>
</table>

<link rel="stylesheet" href="https://cdn.datatables.net/1.10.23/css/dataTables.bootstrap4.min.css" />

@section Scripts{

    <script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.23/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/lib/bootbox/bootbox.min.js"></script>
    <script>
        var datatable;
        var role = @(User.IsInRole("Admin")? "true":"false");

        $(document).ready(function () {
            datatable = $('#memoTable').DataTable({
                "ajax": {
                    "url": "/Memo/GetMemos",
                    "dataSrc": "",
                    "type": "GET",
                    "datatype": "json",
                },
                columns: [
                    { "data": "id" },
                    { "data": "userId" },
                    { "data": "title" },
                    { "data": "note" },
                    {
                        "data": "tags",
                        "render": function (data) {
                            var text = "";
                            $.each(data, function (i) {
                                text += "<span class='badge badge-primary'>" + data[i].name + "</span> ";
                            });
                            return text;
                        }
                    },
                    { "data": "createdAt" },
                    {
                        "data": "id", "render": function (data) {
                            if (role) {
                                return "<div class='btn-group-vertical'>" +
                                    "<a class='btn btn-light' onclick=showPopupForm('@Url.Action("Details","Memo")/" +
                                    data + "')><i class='fa fa-search-plus'></i> Details</a>" +
                                    "<a class='btn btn-warning' onclick=showPopupForm('@Url.Action("Edit","Memo")/" +
                                    data + "')><i class='fa fa-edit'></i> Edit</a>" +
                                    "<a class='btn btn-danger'><i class='fa fa-trash'></i> Delete</a><div>";
                            }
                            else {
                                return "<a class='btn btn-light'><i class='fa fa-search-plus'></i> Details</a>";
                            }
                        }
                    }
                ]
            })
        })

        function showPopupForm(url, title) {
            $.ajax({
                type: "GET",
                url: url,
                success: function (response) {
                    $('#modalAdd .modal-body').html(response);
                    $('#modalAdd .modal-title').html(title);
                    $('#modalAdd').modal('show');
                },
                error: function (xhr) {
                    bootbox.alert({
                        title: "Error: " + xhr.status,
                        message: xhr.statusText,
                    });
                }
            })
        }

        function SubmitForm(form) {
            $.validator.unobtrusive.parse(form);
            if ($(form).valid()) {
                $.ajax({
                    type: "POST",
                    url: form.action,
                    data: $(form).serialize(),
                    success: function (data) {
                        if (data.isValid) {
                            $('#modalAdd').modal('hide');
                            bootbox.alert(
                                {
                                    title: "Notification",
                                    message: data.message
                                });
                            datatable.ajax.reload();
                        }
                        else {
                            $('#modalAdd .modal-body').html(data);
                        }
                    },
                    error: function (xhr) {
                        $('#modalAdd').modal('hide');
                        bootbox.alert({
                            title: "Error: " + xhr.status,
                            message: "Sorry, something went wrong. Please try later.",
                        });
                    }
                });
            }
            return false;
        }

    </script>
}
